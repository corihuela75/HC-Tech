doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width,initial-scale=1")
    title= title
    style.
      body { font-family: Arial; margin:20px; background:#f9f9f9; }
      h1 { color:#333; }
      table { width:100%; border-collapse:collapse; margin-top:20px; background:white; }
      th, td { border:1px solid #ddd; padding:8px; }
      th { background:#4CAF50; color:white; }
      tr:nth-child(even){background:#f2f2f2;}
      button{padding:5px 10px; margin:2px; border:none; border-radius:4px; cursor:pointer;}
      .edit-btn{background:#2196F3;color:white;}
      .delete-btn{background:#f44336;color:white;}
      .submit-btn{background:#4CAF50;color:white;}
      form{margin-top:20px;padding:10px;background:white;border-radius:8px;max-width:500px;}
      label{display:block;margin-top:10px;}

  body
    h1= title || "Gesti√≥n de Empresas"

    // Tabla de empresas
    if items && items.length
      table
        thead
          tr
            each col in columns
              th= col
            th Acciones
        tbody
          each item in items
            tr
              each col in columns
                - var key = col.toLowerCase()
                td= item[key] || ''
              td
                a(href=`${baseUrl}/${item.id}/edit`)
                  button.edit-btn(type="button") Editar
                form(action=`${baseUrl}/${item.id}?_method=DELETE` method="POST" style="display:inline")
                  button.delete-btn(type="submit") Eliminar
    else
      p No hay registros para mostrar.

    // Formulario
    h2#form-agregar= formTitle
    form(action=formAction method="POST")
      each field in fields
        label(for=field.name)= field.label
        input(
          type=field.type
          name=field.name
          id=field.name
          value=field.value || ''
          required=field.required
        )
      button.submit-btn(type="submit")= submitText
